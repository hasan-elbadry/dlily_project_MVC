@model dlily_project.ViewModels.TouristSignUpViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/signup.css" asp-append-version="true">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    @{
        if (!string.IsNullOrEmpty(ViewBag.EmailExists))
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@ViewBag.EmailExists'
                });
            </script>
        }

        

        if (!string.IsNullOrEmpty(ViewBag.error))
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@ViewBag.error'
                });
            </script>
        }

        if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <script>
                  Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@ViewBag.SuccessMessage',
                    timer: 2000, // Auto close after 3 seconds
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = '/Auth/TouristSignIn'; // Redirect to Sign-In page
                });
            </script>
        }
    }

    <div class="container">
        <h1>Sign Up</h1>
        <form method="post" enctype="multipart/form-data" id="signupForm">
            @Html.AntiForgeryToken()

            <div class="input-group">
                <i class="fas fa-user"></i>
                <input asp-for="Name" class="form-control" placeholder="Username" required id="username" />
            </div>
            <div class="error-message">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" class="form-control" placeholder="Email" required id="email" />
            </div>
            <div class="error-message">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" required id="password" />
            </div>
            <div class="error-message">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" required id="confirmPassword" />
            </div>
            <div class="error-message">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="input-group-inline">
                <div class="input-group">
                    <i class="fas fa-phone"></i>
                    <input asp-for="Phone" class="form-control" placeholder="Phone" required id="phone" />
                </div>
                <div class="input-group">
                    <i class="fas fa-map-marker-alt"></i>
                    <input asp-for="Address" class="form-control" placeholder="Address" required id="address" />
                </div>
            </div>

            <div class="input-group-inline">
                <div class="input-group">
                    <select asp-for="Gender" class="form-control" required id="gender">
                        <option value="">Gender</option>
                        <option value="2">Unknown</option>
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                    </select>
                </div>
                <div class="input-group">
                    <select asp-for="SpokenLanguage" class="form-control" required id="SpokenLanguage">
                        <option value="" disabled selected>Select a Language</option>
                        <option value="English">English (EN)</option>
                        <option value="Spanish">Spanish (ES)</option>
                        <option value="Chinese">Chinese (ZH)</option>
                        <option value="Hindi">Hindi (HI)</option>
                        <option value="Arabic">Arabic (AR)</option>
                        <option value="French">French (FR)</option>
                        <option value="Russian">Russian (RU)</option>
                        <option value="Portuguese">Portuguese (PT)</option>
                        <option value="German">German (DE)</option>
                        <option value="Japanese">Japanese (JA)</option>
                        <option value="Korean">Korean (KO)</option>
                        <option value="Italian">Italian (IT)</option>
                        <option value="Turkish">Turkish (TR)</option>
                        <option value="Dutch">Dutch (NL)</option>
                        <option value="Swedish">Swedish (SV)</option>
                        <option value="Polish">Polish (PL)</option>
                        <option value="Thai">Thai (TH)</option>
                        <option value="Vietnamese">Vietnamese (VI)</option>
                        <option value="Indonesian">Indonesian (ID)</option>
                        <option value="Hebrew">Hebrew (HE)</option>
                        <option value="Persian">Persian (FA)</option>
                        <option value="Bengali">Bengali (BN)</option>
                        <option value="Ukrainian">Ukrainian (UK)</option>
                        <option value="Greek">Greek (EL)</option>
                        <option value="Hungarian">Hungarian (HU)</option>
                        <option value="Czech">Czech (CS)</option>
                        <option value="Romanian">Romanian (RO)</option>
                        <option value="Finnish">Finnish (FI)</option>
                        <option value="Danish">Danish (DA)</option>
                        <option value="Norwegian">Norwegian (NO)</option>
                        <option value="Serbian">Serbian (SR)</option>
                        <option value="Croatian">Croatian (HR)</option>
                        <option value="Malay">Malay (MS)</option>
                        <option value="Tagalog">Tagalog (TL)</option>
                        <option value="Urdu">Urdu (UR)</option>
                    </select>
                </div>
            </div>

            <div class="upload-container">
                <div class="upload-box" onclick="document.getElementById('profilePic').click()">
                    <i class="fas fa-upload"></i> Click to upload Profile Picture
                </div>
                <input type="file" asp-for="ProfilePicture" id="profilePic" accept="image/*" style="display: none;" required />
                <div class="error-message">
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>

        <div class="login-link">
            <p>Already have an account? <a asp-controller="Auth" asp-action="TouristSignIn">Sign In</a></p>
        </div>
    </div>

    <script src="~/js/Auth/signup.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
