            height: 60vh;
            background: linear-gradient(rgba(42, 157, 143, 0.2), rgba(38, 70, 83, 0.7)), url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
        }

        .hero-title {
            color: white;
            font-size: 3.5rem;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            animation: fadeInUp 1s ease;
        }

        .companies-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2.5rem;
            padding: 5rem 5%;
            max-width: 1400px;
            margin: 0 auto;
        }

        .company-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.08);
            transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
        }

        img {
            width: 100%;
            height: 280px;
        }

        .company-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 45px rgba(0, 0, 0, 0.15);
        }

        .company-image {
            width: 100%;
            height: 280px;
            position: relative;
            overflow: hidden;
        }

            .company-image::after {
                content: "";
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 40%;
                background: linear-gradient(transparent, rgba(0,0,0,0.7));
            }

        .company-location {
            margin: 10px;
        }

        .company-info {
            padding: 2rem;
            position: relative;
        }



        .specialty-tag {
            background: rgba(42, 157, 143, 0.1);
            color: var(--primary-color);
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s;
        }

            .specialty-tag:hover {
                background: var(--primary-color);
                color: white;
            }

        .company-stats {
            display: flex;
            justify-content: space-between;
            margin: 1.5rem 0;
            padding: 1rem 0;
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            color: var(--primary-color);
            font-size: 1.4rem;
            font-weight: 700;
        }

        .stat-label {
            color: #666;
            font-size: 0.85rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--secondary-color);
            transition: all 0.3s;
        }

            .social-link:hover {
                background: var(--primary-color);
                color: white;
                transform: translateY(-3px);
            }


        .company-rating {
