@model List<HotelOffer>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotels Directory</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <input type="text" class="search-input" placeholder="Search hotels...">
        <div class="company-grid" id="hotelList">
            @foreach (var hotel in Model)
            {
                <div class="company-card">
                    <div class="company-header">
                        <img src="data:image/png;base64,@Convert.ToBase64String(hotel.ImageUrl)" class="company-logo" alt="@hotel.Name">
                        <div>
                            <h2 class="company-name">@hotel.Name</h2>
                            <div class="company-rating">
                                @for (int i = 0; i < hotel.Rating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="company-details">
                        <p>@hotel.Description</p>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt detail-icon"></i>
                            @hotel.Location
                        </div>
                    </div>
                    <div class="company-footer">
                        <span class="price">$@hotel.Price</span>
                    </div>
                    <div class="company-footer">
                        <a href="@hotel.Website" class="website-link" target="_blank">
                            Visit Website <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $(".search-input").on("input", function() {
                var searchTerm = $(this).val().toLowerCase();
                $(".company-card").each(function() {
                    var hotelName = $(this).find(".company-name").text().toLowerCase();
                    $(this).toggle(hotelName.includes(searchTerm));
                });
            });
        });
    </script>
</body>
</html>
